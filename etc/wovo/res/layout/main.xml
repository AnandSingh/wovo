<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:weightSum="1">
    
   <ViewFlipper android:id="@+id/details"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">  

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff">

            <TextView android:id="@+id/tv_country"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18px"
            android:text="Country" >
            </TextView>
            <Button android:text="Learn"
            android:id="@+id/button_default"
            android:layout_width="wrap_content"
            android:textSize="18px"
            android:layout_height="55dp">
        </Button>
        <Button android:text="Revise"
            android:id="@+id/button_learned"
            android:layout_width="wrap_content"
            android:textSize="18px"
            android:layout_height="55dp">
        </Button>
        <Button android:text="Reset"
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:textSize="18px"
            android:layout_height="55dp">
        </Button>
        </LinearLayout> 
        
          <LinearLayout
               android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff">
            
        <Button android:text="MAIN MENU" 
        android:layout_width="wrap_content" 
        android:id="@+id/button_main" 
        android:layout_height="25dp"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="1dip"
        android:layout_weight="0.12"></Button>
<TextView  
    android:id="@+id/num"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    android:layout_marginTop="5dip"
        
    />
      <TextView
            android:id="@+id/word"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:layout_marginLeft="23dip"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical|center_horizontal"
             android:layout_width="270dip"/>
            
    <TextView
            android:id="@+id/definition"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:layout_height="110dip"
            android:text="@string/hello"
            android:layout_marginLeft="23dip"
            android:layout_marginTop="7dip"  
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="270dip"/>
        
        <Button android:text="I have learned this word !"
        android:layout_width="wrap_content"
        android:id="@+id/button_mem" 
        android:layout_height="40dip"
        android:layout_marginLeft="23dip"
        android:layout_marginTop="10dip"></Button>
    <LinearLayout android:id="@+id/linearLayout1"
     android:layout_width="match_parent" 
     android:layout_height="wrap_content" 
     android:weightSum="1"
     android:layout_marginTop="5dip" android:layout_weight="0.30">
        <Button android:text="Back" 
        android:layout_width="wrap_content" 
        android:id="@+id/button2" 
        android:layout_height="84dip"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="10dip" android:layout_weight="0.34"></Button>
        <Button android:text="Next"
        android:layout_width="wrap_content"
        android:id="@+id/button1" 
        android:layout_weight="0.34" 
        android:layout_height="84dip"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="10dip"></Button>
    </LinearLayout>
    

   </LinearLayout> 
  </ViewFlipper>   
</LinearLayout>
